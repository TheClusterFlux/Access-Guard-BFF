# Production Environment Configuration
NODE_ENV=production
PORT=3000

# MongoDB Configuration (from Kubernetes secret)
MONGO_PASSWORD=your-mongodb-password-from-secret
IS_LOCAL=false

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-in-production
JWT_EXPIRE=7d

# Frontend URL
FRONTEND_URL=https://accessguard-frontend.theclusterflux.com

# Local Development Configuration
# For local development, set IS_LOCAL=true and use local MongoDB
# IS_LOCAL=true
# MONGO_PASSWORD=your-local-mongodb-password

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/accessguard.log

# Email Configuration (if needed for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password

# SMS Configuration (if needed for notifications)
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret
